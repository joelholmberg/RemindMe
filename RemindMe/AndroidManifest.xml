<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remindme">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.example.remindme.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.remindme.NoteEdit" />
        <activity
            android:name="com.example.remindme.SetLocationActivity"
            android:label="@string/title_activity_set_location" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="remindme.MainActivity" />
        </activity>
        <activity
            android:name="com.example.remindme.PositionService"
            android:label="@string/title_activity_location_based_services_v1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="remindme.MainActivity" />
        </activity>
        <activity android:name="com.example.remindme.ReminderActivity"></activity>
    </application>

</manifest>